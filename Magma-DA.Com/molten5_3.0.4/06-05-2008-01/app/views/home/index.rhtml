<h1>MOLTEN Dashboard for <%= current_contact.company.name %></h1>

<% if current_contact.custom_home_page %>
<h3>
	<%= image_tag 'icons/bullet_go.png', :size => '16x16', :style => 'vertical-align:middle'%>
	<%= link_to "View the #{current_contact.company.name} customized home page",
	 			:action => 'custom' %>
</h3>
<% end %>

<% cache(:controller => 'home', :action => 'index', :part => 'cases', :contact_id => current_contact.id ) do %>
<%= render(:partial => 'home/index/cases') %>
<% end %>
<%= render :partial => 'home/index/solutions' %>
<%= render(:partial => 'home/index/news') if @articles.any? %>
